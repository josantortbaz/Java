<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class dynamic-insert="false" dynamic-update="false" mutable="true" 
         name="modelo.Persona" table="PERSONA" optimistic-lock="version" 
         polymorphism="implicit" select-before-update="false" >
        <id name="id" column="ID" >
            <generator class="foreign">
                <param name="property">direccion</param>
            </generator>
        </id>
        <property name="nombre" />
               
        <one-to-one name="direccion" cascade="persist, delete" />
        
    </class>
</hibernate-mapping>
